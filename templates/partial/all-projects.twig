{% for post in posts %}
    <div class="col-12 col-md-6 col-lg-4 item">
        <!-- OVERZICHTS ELEMENT (PROJECT ITEM) -->
        <a href="{{ post.link }}">
            <div class="project_item">
                <div class="pi_background_containter"><div class="pi_background" style="background-image: url('{{ Image(post.project_thumbnail).src }}')"></div></div>
                <div class="text_block">
                    <h3>{{ post.project_title }}</h3>
                </div>
            </div>
        </a>
    </div>
{% endfor %}